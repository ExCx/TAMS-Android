<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="462dp"
    android:layout_height="136dp"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asset_label_institution_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:maxLines="1"
            android:text="KURUM ADI"
            android:textColor="@color/white"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/asset_label_asset_def"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:maxLines="2"
                android:text="TAŞINIR TANIMI"
                android:textColor="@color/black"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asset_label_brand"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="MARKA"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/asset_label_model"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="MODEL"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <TextView
                android:id="@+id/asset_label_serial_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:maxLines="1"
                android:text="SERİ NO"
                android:textColor="@color/black"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <ImageView
            android:id="@+id/asset_label_qr_image"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="@dimen/margin_small"
            app:srcCompat="@drawable/qrcode_gray" />
    </LinearLayout>

</LinearLayout>