<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="316dp"
    android:layout_height="116dp"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/margin_tiny"
            app:srcCompat="@drawable/arma_etiket_32b"
            android:contentDescription="@string/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/asset_label_union_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="T.C. SAĞLIK BAKANLIĞI"
                android:textColor="@color/white"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/asset_label_institution_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="XXX DEVLET HASTANESİ"
                android:textColor="@color/white"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/asset_label_bio_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:maxLength="80"
                android:maxLines="2"
                android:text="BİYOMEDİKAL TÜR"
                android:textColor="@color/black"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asset_label_budget_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="BT"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/asset_label_reg_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="7"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="SİCİL NO"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <TextView
                android:id="@+id/asset_label_tag_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="KÜNYE NO"
                android:textColor="@color/black"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <ImageView
            android:id="@+id/asset_label_qr_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="@dimen/margin_small"
            app:srcCompat="@drawable/qrcode_gray" />
    </LinearLayout>

</LinearLayout>