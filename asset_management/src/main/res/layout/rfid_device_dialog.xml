<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_large">

    <TextView
        style="@style/TitleText"
        android:text="@string/antenna_power" />
    <SeekBar
        android:id="@+id/antenna_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        style="@style/TitleText"
        android:text="@string/battery_percentage" />
    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/battery_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        custom:progress_reached_bar_height="3dp"
        custom:progress_text_size="13sp"
        custom:progress_unreached_bar_height="2dp"
        custom:progress_unreached_color="#CCCCCC" />

</LinearLayout>